<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.lucille.irladventurer.HomeFragment">

    <!-- TODO: Update blank fragment layout -->

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/perc_countries_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:layout_marginStart="50dp"
            android:layout_marginTop="52dp"
            android:text="@string/perc_countries_value"
            app:layout_constraintStart_toEndOf="@+id/perc_countries"
            app:layout_constraintTop_toBottomOf="@+id/nb_countries_value" />

        <TextView
            android:id="@+id/perc_countries"
            android:layout_width="200dp"
            android:layout_height="20dp"
            android:layout_marginTop="52dp"
            android:text="@string/perc_countries"
            app:layout_constraintTop_toBottomOf="@+id/nb_countries"
            tools:layout_editor_absoluteX="0dp" />

        <TextView
            android:id="@+id/nb_countries_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="50dp"
            android:layout_marginStart="50dp"
            android:text="@string/nb_countries_value"
            app:layout_constraintStart_toEndOf="@+id/nb_countries"
            tools:layout_editor_absoluteY="0dp" />

        <TextView
            android:id="@+id/nb_countries"
            android:layout_width="200dp"
            android:layout_height="21dp"
            android:text="@string/nb_countries" />
    </android.support.constraint.ConstraintLayout>

</FrameLayout>
